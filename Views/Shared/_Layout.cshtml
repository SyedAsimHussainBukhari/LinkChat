<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.js"></script>


    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>



<body style="margin: 10px ; width: auto !important;">
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" href="/User/Index"> <strong>LinkChat</strong></a>
        </div>

        <div>
          <ul class="nav navbar-nav ">
              @RenderSection("ARegisterSection", required: false)
              @RenderSection("AFormSection", required: false)

              @RenderSection("AAboutSection", required: false)
              @RenderSection("AContactSection", required: false)
              @RenderSection("ASignInSection", required: false)
              @RenderSection("AHomeSection", required: false)

              @RenderSection("UserPagesSection", required: false)



            </ul>
          </div>
    </nav>





        @RenderBody() 

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)




    <div class="row">
        <footer class="modal-footer">
         
         @RenderSection("RegisterSection", required: false)
@RenderSection("HomeSection", required: false)

@RenderSection("AboutSection", required: false)
@RenderSection("ContactSection", required: false)
@RenderSection("SignInSection", required: false) 



        </footer>

        
    </div>

</body>
</html>
